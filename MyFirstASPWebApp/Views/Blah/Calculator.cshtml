@{
    ViewData["Title"] = "Calculator";
}

@model CalculatorModel

<h2>Grade Calculator:</h2>
<form method="post">
    <label>Assignments (55%):</label>
    <input type="number" id="assignments" asp-for="assignments"/><br />
    <label>Group Projects (5%):</label>
    <input type="number" id="groupprojects" asp-for="groupprojects"/><br />
    <label>Quizzes (10%):</label>
    <input type="number" id="quizzes" asp-for="quizzes"/><br />
    <label>Exams (20%):</label>
    <input type="number" id="exams" asp-for="exams"/><br />
    <label>INTEX (10%):</label>
    <input type="number" id="intex" asp-for="intex"/><br />
    <input type="submit" value="Submit Grades" id="submit" />

    <div asp-validation-summary="All"></div>
</form>
<br />

<script src="~/js/calculator.js"></script>
